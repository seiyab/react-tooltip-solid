{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "paths": {
      "@": ["src"]
    },
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
